CXX=g++
CXXFLAGS=-O2 -Wall -lm
TARGET=client

all: $(TARGET)

$(TARGET): client.cc strategy.o svm.o QuadProg++.o
	$(CXX) $(CXXFLAGS) $< svm.o strategy.o QuadProg++.o -o $@

strategy.o: strategy.cc strategy.hh
	$(CXX) $(CXXFLAGS) -c $< -o $@

svm.o: svm.cc svm.hh QuadProg++.o
	$(CXX) $(CXXFLAGS) -c $< QuadProg++.o -o $@

QuadProg++.o: QuadProg++.cc QuadProg++.hh
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	rm $(TARGET) svm *.o; \
	rm a.out; \
	rm bid*
