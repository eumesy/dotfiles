CXX=g++
CXXFLAGS=-O2 -Wall -Wextra -lm
TARGET=client

all: $(TARGET)

$(TARGET): client.cc
	$(CXX) $(CXXFLAGS) $< -o $@

svm: svm.cc QuadProg++.o QuadProg++.hh
	$(CXX) $(CXXFLAGS) $< QuadProg++.o -o $@

QuadProg++.o: QuadProg++.cc QuadProg++.hh
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	rm $(TARGET) *.o
